    "version": "0.2.0",
    "configurations": [
    {
      "name": "Launch Vite Dev Server & Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "node_modules/vite/bin/vite.js"], // Start Vite with inspector
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "cwd": "${workspaceFolder}"
    }
    ]
}
